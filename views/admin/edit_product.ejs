<%- include('../_layouts/adminheader'); %>
<br>
<br>
<h2 class = "page-title"> Edit a product</h2>
<a href = "/admin/products" class = "btn btn-primary">Back to all products</a>
<br><br>

<form method = "POST" action="/admin/products/edit-product/<%= id %>" enctype="multipart/form-data">

<div class = "form-group">
    <label for = "">Title</label>
    <input type="text" name="title" value= "<%= title %>" class= "form-control" placeholder="Title">
</div>

<div class = "form-group">
    <label for = "">Description</label>
    <textarea name="desc" cols="30" rows="10" id = "ta" class= "form-control" placeholder="Description"><%= desc %></textarea>
</div>

<div class = "form-group">
    <label for = "">Category</label>
    <select name = "category" class= "form-control">
        <% categories.forEach(function(cat){ %>
        <option value = "<%=  cat.slug %>">
            <% if(cat.slug == category) { %>
            selected = "selected"
            <% } %>
            <%= cat.title %></option>
       <% }); %>
    </select>

    </div>


<div class = "form-group">
    <label for = "">Price</label>
    <input type="text" name="price" value= "<%= price %>" class= "form-control" placeholder="Price">
</div>



<div class = "form-group">
    <label for = "">Upload Image</label>
    <input type="file" name="image" id="img" class= "form-control">
    <img src = "#" id = "imgPreview" alt= "">
</div>


<button class="btn btn-primary">Submit</button>

</form>
<script>
    function readURL(input) {
        if(input.files && input.files[0]){
            var reader = new FileReader();
            reader.onload = function(e){
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);

            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#img").change(function(){
        readURL(this); 

    });
</script>

<%-  include('../_layouts/adminfooter') %>